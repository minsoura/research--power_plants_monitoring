<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="xyz.minsoura.androtoarduino.MainActivity"
    android:orientation="vertical"
    android:background="#ffffff"
    android:outlineProvider="bounds">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff7c3"
        android:elevation="20dp"
        android:layout_marginBottom="20dp"
        android:outlineProvider="bounds"
        android:paddingBottom="10dp"
        android:padding="5dp"
        android:layout_margin="6dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:background="#f1518c">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="MANUAL"
                                android:id="@+id/textView3"
                                android:textStyle="bold"
                                android:textColor="#ffffff" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="5dp">

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:text="@string/manual_description"
                                android:textSize="13dp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal">

                            <Button android:layout_height="26dp" android:layout_width="46dp" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:id="@+id/buttonStart" android:onClick="onClickStart" android:layout_below="@+id/editText" android:text="Begin"
                                android:textSize="12dp"
                                android:background="#f1518c"
                                android:textColor="#ffffff"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:textStyle="bold" />

                            <Button android:layout_height="26dp" android:layout_width="54dp" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:id="@+id/buttonStop" android:onClick="onClickStop" android:layout_below="@+id/editText" android:text="STOP"
                                android:textSize="12dp"
                                android:background="#f1518c"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textColor="#ffffff"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:textStyle="bold" />

                            <Button android:layout_height="26dp" android:layout_width="62dp" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:id="@+id/buttonClear" android:onClick="onClickClear" android:layout_below="@+id/editText" android:text="CLEAR"
                                android:textSize="12dp"
                                android:background="#f1518c"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textColor="#ffffff"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:textStyle="bold"
                                android:outlineProvider="bounds" />

                            <Button android:layout_height="26dp" android:layout_width="70dp" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:id="@+id/displayButton"
                                android:layout_below="@+id/editText" android:text="DISPLAY"
                                android:textSize="12dp"
                                android:background="#f1518c"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textColor="#ffffff"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:textStyle="bold" />

                            <Button android:layout_height="26dp" android:layout_width="wrap_content" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:id="@+id/checkBatteryButton"
                                android:layout_below="@+id/editText" android:text="B"
                                android:textSize="12dp"
                                android:background="#f1518c"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textColor="#ffffff"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:textStyle="bold" />
                        </TableRow>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </TableRow>

    </LinearLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TableRow>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff7c3"
        android:elevation="20dp"
        android:layout_marginBottom="20dp"
        android:outlineProvider="bounds"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:paddingBottom="10dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SerialTest"
                                android:id="@+id/serialButton" />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ScrollView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/scrollView" >

                                <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:id="@+id/textView" android:layout_below="@+id/buttonSend" android:layout_alignParentBottom="true" android:layout_alignEnd="@+id/editText" android:layout_alignRight="@+id/editText"
                                    android:gravity="center"
                                    android:textSize="17dp"
                                    android:textAlignment="center" />
                            </ScrollView>

                        </TableRow>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </TableRow>

    </LinearLayout>
</LinearLayout>
